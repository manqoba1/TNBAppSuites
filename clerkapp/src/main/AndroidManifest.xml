<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.clerkapp">

    <application
        android:allowBackup="true"
        android:icon="@drawable/notice_logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ReportedIssueListActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape">

        </activity>
        <activity
            android:name=".ReportedIssueDetailActivity"
            android:label="@string/title_reportedissue_detail"
            android:parentActivityName=".ReportedIssueListActivity"
            android:screenOrientation="landscape">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ReportedIssueListActivity" />
        </activity>
        <activity
            android:name=".SinginActivity"
            android:label="@string/title_activity_singin"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
