<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal|center"
    android:background="@drawable/xborder_toast"
    android:padding="5dip">

    <ImageView
        android:id="@+id/imgTOASTOK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:padding="2dip"
        android:src="@drawable/info32" />

    <TextView
        android:id="@+id/txtTOASTMessage"
        style="@android:style/TextAppearance.Medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/imgTOASTOK"
        android:text="Message of Toast will be up here."
        android:textColor="@color/WhiteSmoke"
        android:textSize="16sp"
        android:textStyle="normal" />
</RelativeLayout>