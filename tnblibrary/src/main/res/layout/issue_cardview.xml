<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="5dp"
    android:padding="2dp"
    tools:cardCornerRadius="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <ImageView
            android:id="@+id/IC_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:scaleType="fitXY"
            android:src="@drawable/ic_broken_lights" />

        <TextView
            android:id="@+id/IC_issueName"
            style="@style/Title4TextStyleGray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/IC_image"
            android:text="Medium Text"
            android:textAppearance="?android:attr/textAppearanceListItemSmall"
            android:textColor="@color/black" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_below="@+id/IC_issueName"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/IC_image"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/IC_refNo"
                style="@style/Title3TextStyleGray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/INSC_image"
                android:layout_weight="1"
                android:text="Small Text"
                android:padding="4dp"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/IC_status"
                style="@style/Title3TextStyleGray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:layout_gravity="center_vertical"
                android:padding="4dp"
                android:text="Small Text"
                android:textAppearance="?android:attr/textAppearanceSmall" />
        </LinearLayout>

        <TextView
            android:id="@+id/IC_date"
            style="@style/TitleTextStyleBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/IC_image"
            android:text="New Text" />


    </RelativeLayout>
</android.support.v7.widget.CardView>