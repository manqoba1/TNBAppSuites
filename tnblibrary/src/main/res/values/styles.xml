<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/grey</item>
        <item name="colorPrimaryDark">@color/Gray</item>
        <item name="android:titleTextStyle">@style/actionBarStyle</item>
        <item name="android:fontFamily">sans-serif-light</item>

    </style>

    <style name="CustomAppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/experi</item>
        <item name="colorPrimaryDark">@color/green</item>
        <item name="android:titleTextStyle">@style/actionBarStyle</item>
        <item name="android:fontFamily">sans-serif-light</item>

    </style>

    <style name="Title2TextStyleSpinnerGray" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="Title4TextStyleGray" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/text_gray</item>
        <item name="android:textStyle">italic|bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>
    <style name="TitleTextStyleBlack" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/blue_light</item>
        <item name="android:textStyle">normal|bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>
    <style name="Title3TextStyleGray" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/gray_green</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>
    <style name="TextStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/WhiteSmoke</item>
    </style>

    <style name="actionBarStyle" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/grey</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="PagerSmall">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Title3TextStyleBlack" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/header_name</item>
    </style>

    <style name="BlueCircleSmall" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/xblue_oval_small</item>
    </style>
    <style name="PurpleCircleSmall" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/xcame_colored</item>
    </style>
    <style name="TextStyleSmall" parent="@android:style/TextAppearance.Small">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18dp</item>
    </style>
</resources>